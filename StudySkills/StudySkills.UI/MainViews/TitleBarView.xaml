<UserControl x:Class="StudySkills.UI.MainViews.TitleBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudySkills.UI.MainViews"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800"
             Background="{StaticResource BackPrimary}"
             FontFamily="Helvetica">
    <UserControl.Resources>
        <Image x:Key="OptionsIcon" Source="../Resources/Images/OptionsIcon.png"/>
    </UserControl.Resources>
    <Grid Width="800" Height="50">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0"
                   Margin="15 8 0 0"
                   Text="Study Skills"
                   FontSize="30"
                   Foreground="{StaticResource FontPrimary}"/>
        <Button x:Name="Options"
                Grid.Column="2"
                Margin="0 6 6 6"
                Content="{StaticResource OptionsIcon}"
                Opacity=".87"/>
    </Grid>
</UserControl>
